<?xml version="1.0" encoding="UTF-8" ?>
<themeeditor>
		 
	<author>prestabrain</author>
	<name>Live Theme Editor</name>	
	<layout>
		<item>
			<block>header</block>
			<name>header</name>
			<label>Header</label>
			<default>default</default>
			<type>select</type>
			<desc>Please Enter Your header Here</desc>
			<option>
				 <label>Default</label>
				 <value>default</value>
			</option> 
			<option>
				 <label>Header 1</label>
				 <value>header1</value>
			</option>
		</item>
		<item>
			<block>layout</block>
			<name>layout</name>
			<label>Layout</label>
			<default>fullwidth</default>
			<type>select</type>
			<desc>Please Enter Your Content Here</desc>
			<option>
				 <label>Full Width</label>
				 <value>fullwidth</value>
			</option> 
			<option>
				 <label>Boxed Large</label>
				 <value>boxed-lg</value>
			</option>
			 
		</item>
		<item>
		   <block>logotype</block>
		   <name>logotype</name>
		   <label>Logo Type</label>
		   <default>logo-theme</default>
		   <type>select</type>
		   <desc>Please Enter Your Content Here</desc>
		   <option>
			     <label>Logo In Theme</label>
			     <value>logo-theme</value>
 
		   </option> 
		   <option>
			     <value>logo-inpresta</value>
			     <label>Logo Prestahop</label>
		   </option> 

		</item>
		<item>
			<name>products_itemrow</name>
			<block>products_itemrow</block>
			<label>Number Items On Row Of Products Listing</label>
 
			<type>select</type>
			<desc>Enter number Product Items Show In Per Row</desc>
			<option>
				 <label>1 Item</label>
				 <value>1</value>
			</option> 
			<option>
				 <label>2 Items</label>
				 <value>2</value>
			</option>
			<option>
				 <label>3 Items</label>
				 <value>3</value>
			</option>
			<option>
				 <label>4 Items</label>
				 <value>4</value>
			</option>

			<option>
				 <label>6 Items</label>
				 <value>6</value>
			</option>
		</item>

		

		<item>
			<name>product_accrow</name>
			<block>product_accrow</block>
			<label>Product Accessories Item Per Row</label>
 
			<type>select</type>
			<desc>Product Accessories Item Per Row</desc>
			<option>
				 <label>1 Item</label>
				 <value>1</value>
			</option> 
			<option>
				 <label>2 Items</label>
				 <value>2</value>
			</option>
			<option>
				 <label>3 Items</label>
				 <value>3</value>
			</option>
			<option>
				 <label>4 Items</label>
				 <value>4</value>
			</option>

			<option>
				 <label>6 Items</label>
				 <value>6</value>
			</option>
		</item>

	</layout>
</themeeditor>